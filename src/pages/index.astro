---
import "@/styles/global.css";
import { ModeToggle } from "@/components/ModeToggle";
import AppTable from "@/components/AppTable";
import { GitHubButton } from "@/components/GitHubButton";
import { RawButton } from "@/components/RawButton";

import { loadYamlData } from "@/lib/loadYaml";
const apps = loadYamlData();
---

<!-- shadcn/ui dark theme -->
<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Awesome App</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Noto+Sans+TC&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="min-h-screen">
    <div class="top-0 p-4 flex justify-between w-full">
      <h1 class="text-xl sm:text-2xl font-bold">Awesome App</h1>
      <div class="flex items-center gap-1">
        <RawButton client:load />
        <GitHubButton client:load />
        <ModeToggle client:load />
      </div>
    </div>

    <div class="grid place-items-center content-center px-4">
      <AppTable client:load data={apps} />
    </div>
  </body>
</html>
